# experiments/cpu-stress.json
{
  "version": "1.3.0",
  "title": "CPU Stress Flask Pods",
  "description": "Stress CPU to 90% utilization",
  "method": [
    {
      "type": "action",
      "name": "stress-cpu-flask",
      "provider": {
        "type": "kubernetes",
        "entrypoint": "k8s-stress-cpu"
      },
      "spec": {
        "ns": "default",
        "label_selector": "app=flask-api",
        "workers": "2",
        "cpus": "1800m"
      },
      "pause": "120s"
    }
  ],
  "expected-results": [
    "HPA scales up within 60s",
    "p99 latency < 500ms",
    "Error budget burn rate < 2x"
  ]
}
